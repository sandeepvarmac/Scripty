                          <AreaChart data={paceData}>
                            <CartesianGrid strokeDasharray="3 3" />
                            <XAxis dataKey="scene" />
                            <YAxis />
                            <Tooltip />
                            <Area type="monotone" dataKey="tension" stroke="#10b981" fill="#10b981" fillOpacity={0.3} />
                          </AreaChart>
                        </ResponsiveContainer>
