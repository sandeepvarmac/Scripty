{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://scriptyboy.ai/schemas/note.schema.json",
  "title": "Note",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "severity": { "type": "string", "enum": ["HIGH","MEDIUM","LOW"] },
    "area": {
      "type": "string",
      "enum": ["STRUCTURE","CHARACTER","DIALOGUE","PACING","THEME","GENRE","FORMATTING","LOGIC","REPRESENTATION","LEGAL"]
    },
    "scene_id": { "type": "string" },
    "page": { "type": "integer", "minimum": 1 },
    "line_ref": { "type": "integer", "minimum": 1 },
    "excerpt": { "type": "string" },
    "suggestion": { "type": "string" },
    "apply_hook": {
      "type": "object",
      "properties": {
        "op": {
          "type": "string",
          "enum": ["rewrite","trim","move","replace","insert"]
        },
        "range": {
          "type": "object",
          "properties": {
            "sceneId": { "type": "string" },
            "from": { "type": "integer", "minimum": 0 },
            "to": { "type": "integer", "minimum": 0 }
          },
          "required": ["sceneId"],
          "additionalProperties": false
        }
      },
      "required": ["op"],
      "additionalProperties": false
    },
    "rule_code": { "type": "string" },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
  },
  "required": ["severity","area"],
  "additionalProperties": false
}
